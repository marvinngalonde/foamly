{
  "expo": {
    "name": "Foamly",
    "slug": "foamly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "foamly",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E88E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foamly.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to upload vehicle photos",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload vehicle photos",
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby service providers",
        "NSFaceIDUsageDescription": "Enable biometric authentication for quick login"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E88E5"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.foamly.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1E88E5"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Foamly to use your location to find nearby service providers."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Foamly to access your camera to upload vehicle photos."
        }
      ],
      "expo-font"
    ]
  }
}
